<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="spinnerStyle">@style/App_SpinnerStyle</item>
        <item name="editTextStyle">@style/App_EditTextStyle</item>
        <item name="buttonStyle">@style/App_ButtonStyle</item>

    </style>
    <!-- TextView style -->
    <style name="App_TextView" parent="@android:style/Widget.TextView">
        <item name="android:background">@drawable/round_rect_shape</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:textSize">15dp</item>
        <item name="android:drawablePadding">10dp</item>
    </style>
    <!-- EditText style -->
    <style name="App_EditTextStyle" parent="@android:style/Widget.EditText">
        <item name="android:background">@drawable/round_rect_shape</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:textColor">@color/fontPrimary</item>

        <item name="android:textSize">15sp</item>
        <item name="android:drawablePadding">10dp</item>
    </style>
    <!-- Button style -->
    <style name="App_ButtonStyle" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/round_rect_shape</item>
        <item name="android:backgroundTint">@color/colorAccent</item>
    </style>
    <!-- Spinner style -->
    <style name="App_SpinnerStyle" parent="@android:style/Widget.Spinner">
        <item name="android:textSize">15sp</item>
        <item name="android:background">@drawable/spinner_type_background</item>
        <item name="android:layout_height">45dp</item>

    </style>
</resources>
